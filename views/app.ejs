        })

        function find_sub(input, array){
            var full_words = [];
            var offset = 0;
            while(full_words.length < MAX_COMP && offset < 4){
                for(i in array){
                    if(array[i].length <= offset)
                        continue;
                    if(input.toUpperCase() == array[i].substr(0, array[i].length - offset).toUpperCase()){
                        full_words.push(array[i]);
                        if(full_words.length >= MAX_COMP)
                            break;
                    }
                }
                offset++;
            }
            return full_words;
        }

        function autocomplete(inp, arr) {
            inp.addEventListener("input", function(e){
                $("#autocor").html("<span class= 'auto_ele' style='color: #000'>temp</span>")
                var contents = $(inp).val();
                var array = find_sub(contents, arr)
                console.log(array);
                for(x in array){
                    var temp_ele = $("<span></span>").text(array[x]);
                    $(temp_ele).attr('class', 'auto_ele');
                    $("#autocor").append(temp_ele);
                }
            })
        }
    </script>
